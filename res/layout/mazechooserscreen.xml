<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MazeChooserScreen" >

    <Button
        android:id="@+id/prim"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:minWidth="256dip"
        android:text="Prim&apos;s Maze" />

    <Button
        android:id="@+id/dfs"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/prim"
        android:layout_alignLeft="@+id/prim"
        android:layout_alignRight="@+id/prim"
        android:layout_marginBottom="31dp"
        android:text="DFS Maze" />

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/dfs"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="43dp"
        android:text="Choose Your Maze"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textSize="28dp" />

</RelativeLayout>